---
import NavBar from '@components/shared/NavBar.astro';
import { siteInfo } from 'src/consts/site-info';
interface Props {
	title?: string;
	image?: string;
	description?: string;
}

const { title=siteInfo.title, description=siteInfo.description, image } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>

		<meta name="description" content={description} />
		<meta name="author" content={'Fernando Rodriguez'} />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />

		<style>
			@view-transition {
			  navigation: auto; /* enabled! */
			}
		</style>
	</head>
	<body class="bg-slate-800 text-slate-100 ">
		<NavBar />
		<main class="mt-10 m-auto max-w-3xl">
			<slot /> 
		</main>
	</body>
</html>
